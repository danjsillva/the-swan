// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BROKER {
  AVENUE
  INTER
}

enum CURRENCY {
  BRL
  USD
}

enum STOCK_EXCHANGE {
  B3
  NYSE
  NASDAQ
}

enum TYPE {
  BUY
  SELL
}

model Order {
  id            Int            @id @default(autoincrement())
  date          DateTime
  noteNumber    String
  broker        BROKER
  currency      CURRENCY
  stockExchange STOCK_EXCHANGE
  type          TYPE
  ticker        String
  quantity      Float
  price         Float
  fees          Float

  fileName   String
  fileText   String
  fileBuffer String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}
