// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id       Int    @id @default(autoincrement())
  date     DateTime
  type     String
  ticker   String
  quantity Float
  price    Float
  fees     Float
  total    Float

  note   Note @relation(fields: [noteId], references: [id])
  noteId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}

model Note {
  id              Int      @id @default(autoincrement())
  number          String
  date            DateTime
  stockExchange   String
  broker          String
  currency        String
  totalOperations Float
  totalFees       Float
  fileName        String
  fileText        String
  fileBuffer      String

  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notes")
}
